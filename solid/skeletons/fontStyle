@import (reference) "../References.less";

// Declare font-face
@font-face
{
  // Font familiy name
	font-family: '%%fontFamilyName%%';

  // Load font files
	src:	url('@{fontBasePath}/%%fontFamilyName%%/%%fontFamilyName%%.eot?#iefix')	format('embedded-opentype'),
				url('@{fontBasePath}/%%fontFamilyName%%/%%fontFamilyName%%.woff')				format('woff'),
				url('@{fontBasePath}/%%fontFamilyName%%/%%fontFamilyName%%.ttf')				format('truetype');

  // Declare style
	font-weight: normal;
	font-style: normal;
}

// Font variant mixin
.%%fontClassName%% ()
{
	font-family : '%%fontFamilyName%%', sans-serif;
	.fontSmooth();
}