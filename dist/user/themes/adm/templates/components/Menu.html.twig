{# target menus setting page #}
{% set menu = page.find('/_global/menus') %}

<nav class="Menu {{ classElement }}">
    <ul class="Menu_items">
        {% if menu.header.custom.main.entries %}
            {% for item in menu.header.custom.main.entries %}
                <li class="Menu_item">
                  <a class="Menu_link"
                     href="{{ item.link }}"
                     {% if item.external %} target="_blank" {% endif %}>
                       <div class="Menu_innerLink">
                         {{ item.name }}
                       </div>
                  </a>
                </li>
            {% endfor %}
        {% endif %}
    </ul>
</nav>

