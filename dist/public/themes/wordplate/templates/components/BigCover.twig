{#
 * @title: BigCover
 * @description: header HomePage Video
 #}

<div class="BigCover {{ classElement }}">

    {# video #}
    <video class="BigCover_video"
           src="{{ theme.path }}/videos/clip.mp4"
           autoplay muted loop type="video/mp4" />

    {# logo ADM #}
    <div class="BigCover_logo">
        {% include "./images/logo-adm-blanc.svg" %}
    </div>

    {# // TODO : link image url "home-header.jpg" avec WP back post thumbnail (image Ã  la une) ?>#}
    <div class="BigCover_backgroundImage"
         style="background-image: url('{{ theme.path }}/images/home-header.jpg')">

        {# importer le composant eventBanner #}
        {%
            include "templates/components/EventBanner.twig"
            with { 'classElement': 'BigCover_eventBanner' }
        %}
    </div>

</div>
