{#
 * @title: "SocialBlock" PHP View component
 * @description: block icon social
#}

<div class="SocialBlock {{ classElement }}">
    <ul class="SocialBlock_items">

        {# facebook #}
        <li class="SocialBlock_item">
            <a class="SocialBlock_link">
                <div class="SocialBlock_innerLink SocialBlock_innerLink-facebook">
                    <i class="SocialBlock_icon SocialBlock_icon-facebook">
                        {% include '/images/icon-facebook.svg' %}
                    </i>
                </div>
            </a>
        </li>

        {# twitter #}
        <li class="SocialBlock_item">
            <a class="SocialBlock_link">
                <div class="SocialBlock_innerLink SocialBlock_innerLink-twitter">
                    <i class="SocialBlock_icon SocialBlock_icon-twitter">
                        {% include '/images/icon-twitter.svg' %}
                    </i>
                </div>
            </a>
        </li>

    </ul>
</div>
