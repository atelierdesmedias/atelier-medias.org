{#
 * @title: "MainNav" TWIG view component
 * @description:
#}

<div class="MainNav {{ classElement }}">
    <div class="MainNav_content">

        <div class="MainNav_innerContent MainNav_innerContent-logo">
            {# logo #}
            <div class="MainNav_logo">
                {% include "images/logo-adm-noir.svg" %}
            </div>
        </div>

        <div class="MainNav_innerContent">
            {# include "menu" component #}
            {% include "templates/components/Menu.twig"
                with { 'classElement': 'MainNav_menu' } %}

            {# include "socialBlock" component #}
            {% include "templates/components/SocialBlock.twig"
                with { 'classElement': 'MainNav_socialBlock' } %}

            {#
            include "languageBlock" component
            Desactivé pour la première publication V1
            #}
            {#
                {%
                    include "templates/components/LanguageBlock.twig"
                    with { 'classElement': 'MainNav_languageBlock' }
                %}
            #}
        </div>

    </div>
</div>
